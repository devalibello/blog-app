<header>
    <%= stylesheet_link_tag 'posts_show' %>
</header>

<section class="main-post">
    <div class="post-container">
        <div class="post-info">Post #<%= @posts.id %> by <%= @posts.author.name %></div>
        <div class="post-comments-likes">Comments: <%= @posts.comments.count %> Likes: <%= @posts.likes.count %></div>
        <div class="post-text"><%= @posts.text %></div>
    </div>
    <% if @posts.comments.present? %>
    <div class="post-comment-section">
        <% @posts.comments.each do |comment| %>
        <div class="comment"><%= comment.user.name %>: <%= comment.text%></div>
        <% end %>
    </div>
    <% end %>
</section>